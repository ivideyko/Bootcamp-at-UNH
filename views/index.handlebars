<div class="jumbotron">
  <div class="container">
    <h1 class="display-2">Eat-Da-Burger!</h1>
  <form class="create-form">
    <div class="form-group">
      <h4><label for="burger">What do you want on your burger?</label></h4>
      <input type="text" id="burger" name="type">
    </div>
    <button type="submit" class="btn btn-primary">Place Order</button>
  </form>
  </div>
</div>
<div class="container">
  <div class="row burgers">
    <div class="offset-1 col-md-6">
      <h2>Burgers to Eat!</h2>
      <ul>
        {{#each burgers}}
          {{#unless eaten}}
            {{> burgers/burger-block eaten=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-5">  
      <h2>Burgers Eaten!</h2>
      <ul>
        {{#each burgers}}
          {{#if eaten}}
            {{> burgers/burger-block}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

